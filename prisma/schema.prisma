generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:rootmysql@localhost:3306/shopify_app"
}

model specification {
  id                 Int    @id @default(autoincrement())
  part_no            String
  spec_key           String
  spec_value         String
  shopify_product_id Int    @default(0)
  product_handle     String
  product_title      String
}

model faq {
  id           String @id
  question     String
  answer       String
  resourceId   String
  resourceType String
}

model session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}
