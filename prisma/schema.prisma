generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:rootmysql@localhost:3306/shopify_app"
}

model faq {
  id           String @id
  question     String
  answer       String
  resourceId   String
  resourceType String
}

model session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Specifications {
  id          Int      @id @default(autoincrement())
  sku         String   @db.VarChar(100)
  spec_key    String   @db.VarChar(255)
  spec_value  String   @db.VarChar(255)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@unique([sku, spec_key, spec_value], name: "sku_spec_key_value")


  @@map("specifications") // Maps the Prisma model to the existing table name
}

